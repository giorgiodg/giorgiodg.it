---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { readingTime } from "@lib/utils";
import BackToPrev from "@components/BackToPrev.astro";
import Link from "@components/Link.astro";
import { Link as LinkIcon } from "@lucide/astro";

export async function getStaticPaths() {
  const showcase = (await getCollection("showcase"))
    .filter((post) => !post.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  return showcase.map((project) => ({
    params: { slug: project.slug },
    props: project,
  }));
}
type Props = CollectionEntry<"showcase">;

const item = Astro.props;
const { Content } = await item.render();
---

<PageLayout title={item.data.title} description={item.data.description}>
  <Container>
    <div class="animate">
      <BackToPrev href="/showcase"> Back to showcase </BackToPrev>
    </div>
    <div class="space-y-1 my-8">
      <div class="animate flex items-center gap-1.5">
        <div class="font-base text-sm">
          <FormattedDate date={item.data.date} />
        </div>
        &bull;
        <div class="font-base text-sm">
          {readingTime(item.body)}
        </div>
      </div>
      <div class="animate text-2xl font-semibold text-black dark:text-white">
        {item.data.title}
      </div>
      {
        (item.data.URL || item.data.repoURL) && (
          <nav class="animate flex gap-1 pt-3">
            {item.data.URL && (
              <LinkIcon />
              <Link href={item.data.URL} external>
                link
              </Link>
            )}
            {item.data.URL && item.data.repoURL && <span>/</span>}
            {item.data.repoURL && (
              <Link href={item.data.repoURL} external>
                repo
              </Link>
            )}
          </nav>
        )
      }
    </div>
    <article class="animate">
      <Content />
    </article>
  </Container>
</PageLayout>
